{
  "pipeline_settings": {
    "model_type": "random_forest",
    "training_mode": "balanced",
    "confidence_threshold": 0.5,
    "min_heading_percentage": 0.5
  },
  
  "model_params": {
    "n_estimators": 200,
    "max_depth": 20,
    "min_samples_split": 3,
    "min_samples_leaf": 1,
    "class_weight": {"0": 1, "1": 10}
  },
  
  "smote_params": {
    "sampling_strategy": 0.4,
    "random_state": 42
  },
  
  "tfidf_params": {
    "max_features": 50,
    "ngram_range": [1, 2],
    "min_df": 2,
    "max_df": 0.8,
    "stop_words": "english"
  },
  
  "directories": {
    "labelled_data": "labelled_data",
    "unprocessed_pdfs": "unprocessed_pdfs",
    "input": "input",
    "output": "output",
    "models": "models",
    "predictions": "predictions",
    "reviewed": "reviewed"
  },
  
  "extraction_settings": {
    "min_text_length": 3,
    "font_percentiles": [50, 75, 90],
    "enable_fallback": true
  }
}
